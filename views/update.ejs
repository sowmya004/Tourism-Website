<%- include("partials/header"); -%>
<div class= "container">
    <h1>Update hotel details</h1>
    <br>
    <form class="" action="/update/<%=hid%>" method="POST">
      <div class="form-group row">
        <div class="col-xs-2">
              <label for="floatingInputGrid">Price</label>
              <input name="update_price" type="text" class="form-control" id="floatingInputGrid" required>
            </div>
            <div class="form-group row">
              <div class="col-xs-2">
                <label for="floatingInputGrid">Rating</label>
                <input name="update_rating" type="text" class="form-control" id="floatingInputGrid" required>
              </div>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-xs-2">
                <label for="floatingInputGrid">Phone number</label>
                <input name="update_phno" type="text" class="form-control" id="floatingInputGrid" required>
              </div>
          </div>
        <div class="form-group row">
          <div class="col-xs-5">
          <label>Amenities</label>
          <textarea name="update_facilities" class="form-control" rows="4" required></textarea>
          </div>
        </div>
        <br>
      <button class="btn btn-success" type="submit" name="button" onclick="success()" >Update</button>
    </form>
  </div>
  <script>
    function success()
    {
      swal("Wohoo!", "Successfully updated!", "success");
    }
  </script>

<%- include("partials/footer"); -%>